
# ------------------------------ compiler options ------------------------------
NAME		=	lab3
CC			=	clang
CFLAGS		=	-Wall -Wextra -Werror
COPTIONS	=	-O2
# ------------------------------- linker options -------------------------------
LIBRARY		=	-L.
OBJS_DIR	=	obj
INCLUDE_DIR	=	inc
SCRS_DIR	=	src
# ------------------------------- project sorces -------------------------------
SRCS		=	\
				error	\
				main	\
				utils	\
				led

# ------------------------------------------------------------------------------
HDRS		=	\
				color	\
				error	\
				lab3

# ======================= UNCHANGEABLE PART OF MAKEFILE ========================
# ------------------------------------------------------------------------------
RM			=	rm -f
OBJS		=	$(addprefix ${OBJS_DIR}/,${SRCS:=.o})
DEPS		=	$(addprefix ${INCLUDE_DIR}/,${HDRS:=.h})
INCLUDE		=	-I ${INCLUDE_DIR}

# ------------------------------------------------------------------------------
all:			${OBJS_DIR}
	@$(MAKE)	$(NAME) -j

# ------------------------------------------------------------------------------
${OBJS_DIR}/%.o: ${SCRS_DIR}/%.c ${DEPS} Makefile
	${CC}		${CFLAGS} ${COPTIONS} -c -o $@ $< ${INCLUDE}

# ------------------------------------------------------------------------------
$(NAME):		${OBJS} ${DEPS}
	${CC}		-o ${NAME} ${CFLAGS} ${COPTIONS} ${OBJS} ${LIBRARY}

# ------------------------------------------------------------------------------
clean:
	${RM}		${OBJS}

# ------------------------------------------------------------------------------
fclean:			clean
	${RM}		${NAME}

# ------------------------------------------------------------------------------
re:				fclean install all

# ------------------------------------------------------------------------------
${OBJS_DIR}:
	mkdir		-p ${OBJS_DIR}

# ------------------------------------------------------------------------------
.PHONY:			all clean fclean re
