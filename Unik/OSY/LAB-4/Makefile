# ------------------------------ compiler options ------------------------------
NAME		=	server
CC			=	clang
CFLAGS		=	-Wall -Wextra -Werror
COPTIONS	=	-O2
# ------------------------------- linker options -------------------------------
LIBRARY		=	-L. -lpthread
OBJS_DIR	=	obj
INCLUDE_DIR	=	inc
SRCS_DIR	=	src
# ------------------------------- project sorces -------------------------------
SRCS		=	\
				error		\
				memory		\
				server		\
				utils
# ------------------------------------------------------------------------------
HDRS		=	\
				color		\
				error		\
				lab4		\
				memory

# ======================= UNCHANGEABLE PART OF MAKEFILE ========================
# ------------------------------------------------------------------------------
RM			=	rm -f
OBJS		=	$(addprefix ${OBJS_DIR}/,${SRCS:=.o})
DEPS		=	$(addprefix ${INCLUDE_DIR}/,${HDRS:=.h})
INCLUDE		=	-I ${INCLUDE_DIR}

# ------------------------------------------------------------------------------
all:			${OBJS_DIR}
	@$(MAKE)	$(NAME) -j

# ------------------------------------------------------------------------------
${OBJS_DIR}/%.o: ${SRCS_DIR}/%.c ${DEPS} Makefile
	${CC}		${CFLAGS} ${COPTIONS} -c -o $@ $< ${INCLUDE}

# ------------------------------------------------------------------------------
$(NAME):		${OBJS} ${DEPS}
	${CC}		-o ${NAME} ${CFLAGS} ${COPTIONS} ${OBJS} ${LIBRARY}

# ------------------------------------------------------------------------------
clean:
	${RM}		${OBJS}

# ------------------------------------------------------------------------------
fclean:			clean
	${RM}		${NAME}

# ------------------------------------------------------------------------------
re:				fclean all

# ------------------------------------------------------------------------------
${OBJS_DIR}:
	mkdir		-p ${OBJS_DIR}

# ------------------------------------------------------------------------------
.PHONY:			all clean fclean re
